<script>
	window['CKEDITOR_BASEPATH'] = "/assets/ckeditor/";
</script>

<%= javascript_include_tag 'ckeditor/init' %>

<script>
  $(function() {
    var ids = [<%= raw ids.map{|id| "'#{id}'"}.join(', ') %>];
    for (var key in ids) {
      if ($('#' + ids[key]).length > 0) {
        CKEDITOR.replace(ids[key]);
      }
    }
  });
</script>
