<%= javascript_include_tag 'admin/wymeditor/jquery.wymeditor.min.js' %>

<script type="text/javascript">
  $(function() {
      var ids = [<%= raw ids.map{|id| "'textarea##{id}'"}.join(', ') %>]
      $(ids.join(', ')).wymeditor({
        lang: '<%= I18n.locale.to_s.downcase %>',
        skin: 'compact',
        updateSelector: 'form',
        updateEvent: 'submit',
        jQueryPath: 'https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'
      });
  });
</script>
